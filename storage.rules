rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function
    function isAuthenticated() {
      return request.auth != null;
    }

    // Support attachments (Images/Logs)
    match /suporte/{fileName} {
      allow read, write: if isAuthenticated();
    }

    // Ticket attachments
    match /chamados/{allPaths=**} {
      allow read, write: if isAuthenticated();
    }

    // General fallback (optional, safer to keep specific)
    // Support / Error Registry Images
    match /suporte/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    match /{allPaths=**} {
      allow read, write: if false; 
    }
  }
}
